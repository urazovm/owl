.row= render partial: 'layouts/header'
%hr

- if defined? @users
  .row
    .col-sm-4
      .well.well-sm
        - cache ['v1', @list, 'info'] do
          = render partial: 'lists/info', locals: { list: @list.decorate, user: @user.decorate }
        .row
          .col-sm-12.col-xs-8
            - cache ['v1', @list, 'links'] do
              = render partial: 'lists/links', locals: { list: @list.decorate }
          .col-sm-12.col-xs-4
            = render partial: 'lists/actions', locals: { list: @list.decorate }
    .col-sm-8
      - cache ['v1', @list, 'lovers'] do
        = render partial: 'loves/user_list', locals: { users: @users }

- elsif defined? @lists
  - cache ['v1', @user, 'info'] do
    = render partial: 'users/info', locals: { user: @user.decorate }
  - cache ['v1', @user, 'lovings'] do
    = render partial: 'loves/list_list', locals: { user: @user.decorate, lists: @lists }
  %script
    = "window.owl.env['following'] = #{current_user.following? @user};" if signed_in? && current_user.id != @user.id
    = "window.owl.env['owner'] = true;" if signed_in? && current_user.id == @user.id
