= render partial: 'layouts/menu'

%h1= @list.decorate.linked_title

= simple_form_for(@list) do |f|
  = f.input :title
  = f.input :description, as: :text
  = f.input :category_id, as: :select, collection: ListCategories
  .items
    = f.simple_fields_for :items do |i|
      .item
        = i.input :name
        = i.input :image, as: :image_preview, input_html: { preview_version: :small }
  = f.button :submit

%p
  = link_to 'delete', list_path(@list), method: :delete, confirm: 'Are you sure??'
