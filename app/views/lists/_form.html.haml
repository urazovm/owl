= simple_form_for(list) do |f|
  = f.input :title
  = f.input :description, as: :text
  = f.input :category_id, as: :select, collection: ListCategories
  .items
    = f.simple_fields_for :items do |i|
      .item{ id: "item_#{i.object.id}" }
        = i.input :name
        = i.input :image, as: :image_preview, input_html: { preview_version: :small }
        = link_to 'delete image', list_item_image_path(list, i.object), remote: true, method: :delete, class: :delete if i.object.image.file?
  = f.button :submit

- if list.persisted?
  %p= link_to 'cancel', list_path(list)
  %p= link_to 'delete', list_path(list), method: :delete, confirm: 'Are you sure??'
