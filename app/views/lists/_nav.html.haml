- if signed_in?
  %p= list.love_button
- else
  %p.text-center.call_to_action
    = link_to t('.login_link'), new_user_session_path(r: 1), class: 'btn btn-sm btn-default'
    %strong= t('.or')
    = link_to t('.register_link'), new_user_registration_path(r: 1), class: 'btn btn-sm btn-default'
  %p.text-center= t('.to')
%ul#list_nav.nav.nav-tabs.actions
  %li.active= list.comments_link
  %li= list.lovers_link
