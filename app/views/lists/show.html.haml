= render partial: 'layouts/menu'

%h1= @list.linked_title

= render partial: 'loves/button', locals: { list: @list } if signed_in?

%p#total_lovers= @list.total_lovers
%p#total_comments= @list.total_comments

%p= @list.linked_category
%p= @list.linked_user
%p= @list.edit_link
%p= @list.lovers_link
%p= @list.description
%ul
  - @list.items.each_with_index do |item, i|
    %li= item.title

= render partial: 'comments/form', locals: { comment: @comment } if defined? @comment
= render partial: 'comments/list', locals: { comments: @comments }
