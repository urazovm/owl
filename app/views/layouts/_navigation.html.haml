#search
  = form_tag lists_path, method: :get, class: 'well well-sm' do
    = text_field_tag :query, '', class: 'form-control'
    = hidden_field_tag :category_id, params[:category_id] unless params[:category_id].blank?
    = submit_tag 'Search', class: 'btn btn-sm submit'

%ul#categories.list-unstyled
  - ListCategories.each_with_index do |category, i|
    %li= link_to i + 1, lists_path(category_id: category[1]), class: "category_#{category[1]}"
