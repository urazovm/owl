<!DOCTYPE html>
%html
  %head
    %title Owl
    = javascript_include_tag "vendor", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = stylesheet_link_tag "vendor", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags

  %body
    .container
      = yield

    %script
      = "window.owl.env['controller'] = '#{params['controller'] || 'none'}';"
      = "window.owl.env['action'] = '#{params['action'] || 'none'}';"
      = "window.owl.env['signed'] = #{signed_in?};"

