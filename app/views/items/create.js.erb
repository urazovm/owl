var item = $("<%= escape_javascript(render(partial: 'items/edit_form', locals: { item: @item })) %>");
$('#list_items_forms').append(item);
item.find('form').css('visibility', 'hidden');
item.hide().slideDown('slow', function() {
  item.find('form').hide().css('visibility', 'visible').fadeIn();
});
<% if @item.image? %>
$('#item_<%= @item.id %>_form').itemEditImageForm({
    'url' : '<%= list_item_path(@item.list, @item) %>'
});
<% end %>
