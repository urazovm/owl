%li.item{ class: item.type_name, id: "item_#{item.id}" }
  - if defined? editable && editable
    .tools
      = link_to t('.delete'), list_item_path(item.list, item), remote: true, method: :delete, class: 'text-danger'
      %span -
      = link_to t('.edit'), edit_list_item_path(item.list, item), remote: true
  - item = item.decorate
  = item.name
  - case item.type
  - when Item::TYPES.index(:text)
    = item.text
  - when Item::TYPES.index(:image)
    = item.image(:small)
  - when Item::TYPES.index(:link)
    = item.link
