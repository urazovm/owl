.row
  .col-sm-5
    %h2= t('.title')
    %p= t('.text')
    %p= t('.sign_up_text')
    %p= link_to t('.sign_up_link'), new_registration_path(resource_name), class: 'btn btn-default'

  .col-sm-7
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = f.input :email, required: false, autofocus: true
      = f.input :password, required: false
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
      = f.button :submit, t('.submit'), class: 'btn btn-full btn-primary'
      %span.help-block
        = t('.forgot_password_text')
        = link_to t('.forgot_password_link'), new_password_path(resource_name)
