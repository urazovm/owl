.row
  .col-sm-5
    %h2= t('.title')
    %p= t('.text')
    %p= link_to t('.cancel'), user_path(resource), class: 'btn btn-default'

  .col-sm-7
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      = f.input :avatar, as: :file
      = f.input :password, autocomplete: 'off', hint: "leave it blank if you don't want to change it", required: false
      = f.input :password_confirmation, required: false
      = f.input :current_password, hint: 'we need your current password to confirm your changes', required: true
      = f.button :submit, t('.submit'), class: 'btn btn-full btn-primary'

%hr

.row

  .col-sm-12
    %h3= t('.delete_title')
    %p
      = t('.delete_text')
      = link_to t('.delete_link'), registration_path(resource_name), data: { confirm: t('.delete_confirm') }, method: :delete, class: 'text-danger'
